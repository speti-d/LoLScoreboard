ManageWindow:

<ManageWindow>:
    StartWindow:
    SummonerWindow:
    MatchWindow:

<StartWindow>:
    name: "start_window"
    StartLayout:

<SummonerWindow>:
    name: "summoner_window"
    id: sum_window
    MyGridLayout:
        id: mygridlayout

<MatchWindow>:
    name: "match_window"
    Label:
        text: "match_window"



<StartLayout>:
    BoxLayout:
        pos: root.width / 2, root.height / 2
        orientation: "vertical"
        size_hint: None, None
        Label:
            text: "Api key:"
        TextInput:
            id: api_key
            multiline: False
        Label:
            text: "Username:"
        TextInput:
            id: usr_name
            multiline: False
        Button:
            size_hint: None, None
            size: 70, 30
            text: "Search..."
            on_press:
                app.root.get_screen("summoner_window").ids.mygridlayout.get_summonerpage(usr_name.text, api_key.text)
                app.root.current = "summoner_window"


<MyGridLayout>:
    cols: 2
    GridLayout:
        rows: 5
        Image:
            id: summ_icon
            source: 'summoner icon'
            size_hint: 1, 3
            allow_stretch: True
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: summ_name
                text: 'summoner name'
            Label:
                id: summ_level
                text: 'summoner level'
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: champ_mastery1P
                source: 'champ mastery pic 1'
            Label:
                id: champ_mastery1
                text: 'champ mastery 1'
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: champ_mastery2P
                source: 'champ mastery pic 2'
            Label:
                id: champ_mastery2
                text: 'champ mastery 2'
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: champ_mastery3P
                source: 'champ mastery pic 3'
            Label:
                id: champ_mastery3
                text: 'champ mastery 3'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Refresh'
            on_press: root.update()
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: match0p
                source: 'pic'
                size_hint: 0.2, 1
            Label:
                id: match0kda
                text: 'Match 1 KDA/CS'
                background_color: 0,0,0,0
            Button:
                on_release: app.root.current = "match_window"
                text: '>>'
                size_hint: 0.2, 1
                on_press:
        BoxLayout:
            orientation: 'horizontal'
            Image:
